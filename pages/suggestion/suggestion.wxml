<view class='container'>
  <view class='common-header' >
    <view class='inner-header second-header'>睡眠建议</view>
  </view>
  <view class='main-container'>
    <view class='card-container'>
      <view class='card'>
        <image data-index='0' src='../../static/images/card_1.png' bindtap='showDetail'></image>
      </view>
      <view class='card'>
        <image data-index='1' src='../../static/images/card_2.png' bindtap='showDetail'></image>
      </view>
      <view class='card'>
        <image data-index='2' src='../../static/images/card_3.png' bindtap='showDetail'></image>
      </view>
      <view class='card'>
        <image data-index='3' src='../../static/images/card_4.png' bindtap='showDetail'></image>
      </view>
      <view class='card'>
        <image data-index='4' src='../../static/images/card_5.png' bindtap='showDetail'></image>
      </view>
      <view class='card'>
        <image data-index='5' src='../../static/images/card_6.png' bindtap='showDetail'></image>
      </view>
    </view>
  </view>

</view>
<!--  -->
<view class='mask-container' hidden='{{showMask}}'>
  <view class='mask-header-container'>
    <view class="close-container" bindtap='closeMask'>
      <image  src='../../static/images/icon/icon_close.png' ></image>
    </view> 
    <view class='mask-header'>{{maskTitle}}</view>
  </view>
  <view class='mask'>
    <image  src='{{nowPath}}'></image>
  </view>
</view>